{
  "name": "Tab Statistics",
  "version": "2.0",
  "manifest_version": 2,
  "description": "Keep track of how many tabs you have open at any given time.",

  "icons": {
    "16": "19.png"
  },

  "browser_action": {
    "default_icon": "19.png",
    "default_title": "Tab Statistics"
  },

  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
    "persistent": false,
    "scripts": [
      "pouchdb-3.4.0.min.js",
      "tab-statistics.js"
    ]
  }
}
