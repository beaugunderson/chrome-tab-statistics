{
  "name": "Tab Statistics",
  "version": "3.2",
  "manifest_version": 2,
  "description": "Keep track of how many tabs you have open at any given time.",

  "icons": {
    "128": "icon.png"
  },

  "permissions": [
    "alarms",
    "tabs",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
    "persistent": false,
    "scripts": [
      "pouchdb-5.4.5.js",
      "pouchdb.authentication.js",
      "tab-statistics.js"
    ]
  }
}
